<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Estate Property Offer -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Estate Property Offer -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <header>
                    <!-- 

                    <button name="action_accept" string="Accept" type="object" class="btn btn-primary" t-if="state === 'new'"/>
                    <button name="action_refuse" string="Refuse" type="object" class="btn btn-secondary" t-if="state === 'new'"/>
                    
                    <button name="action_accept" string="Accept" type="object" class="btn btn-primary" t-if="state == 'new'"/>
                    <button name="action_refuse" string="Refuse" type="object" class="btn btn-secondary" t-if="state == 'new'"/>
                    !-->

                    <button name="action_accept" string="Accept" type="object" class="btn btn-primary"/>
                    <button name="action_refuse" string="Refuse" type="object" class="btn btn-secondary" />

                </header>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
