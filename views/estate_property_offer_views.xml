<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View for Estate Property Offer -->
    <record id="view_estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price"/>
                <field name="partner_id"/>
                <!-- Accept Offer Button -->
                 <button type="action" 
                            name="%(estate.action_estate_property_offer_accept)d" 
                            string="" 
                            class="btn-primary"
                            icon="fa-check"/>
                    
                    <!-- Refuse Offer Button -->
                    <button type="action" 
                            name="%(estate.action_estate_property_offer_refuse)d" 
                            string="" 
                            class="btn-secondary"
                            icon="fa-times"
                            />
                    <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Estate Property Offer -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
