<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View for Estate Property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <sheet>
                    <!-- First Group: Single Column Layout -->
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <!-- Add property_type_id field in the form view -->
                        <field name="property_type_id" options="{'no_create': True}" />
                    </group>

                    <!-- Two Column Layout: Second and Third Groups -->
                    <group>
                        <group>
                            <!-- Second Group: Left Column -->
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="bedrooms"/>
                            <field name="facades"/>
                            <field name="garden"/>
                            <field name="garden_orientation"/>
                        </group>

                        <group>
                            <!-- Third Group: Right Column -->
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="living_area"/>
                            <field name="garage"/>
                            <field name="garden_area"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Estate Property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property List">
                <field name="name" string="Title"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="garden"/>
                <field name="garden_orientation"/>
                <field name="garden_area"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="living_area"/>
                <field name="garage"/>
                <!-- Add property_type_id field in the tree view -->
                <field name="property_type_id" string="Property Type"/>
            </tree>
        </field>
    </record>

    <!-- Search View for Estate Property -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Property Search">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <!-- Add property_type_id field in the search view -->
                <field name="property_type_id"/>
            </search>
        </field>
    </record>

    <!-- Action for Estate Property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new property listing.
            </p>
        </field>
    </record>

    <!-- Add Custom Create Button in List View -->
    <record id="view_estate_property_tree_action" model="ir.actions.act_window">
        <field name="name">Estate Property List</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'default_name': ''}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new property listing.
            </p>
        </field>
        <field name="views" eval="[(ref('view_estate_property_tree'), 'tree'), (ref('view_estate_property_form'), 'form')]"/>
    </record>

</odoo>
