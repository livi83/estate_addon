<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View for Estate Property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <sheet>
                    <header>
                        
                    </header>

                    <!-- Title and Tags -->
                    <group>
                        <field name="name" widget="char"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>

                    <!-- Two-column layout -->
                    <group>
                        <group>
                            <field name="property_type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability" string="Available From"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="selling_price"/>
                            <field name="best_price" readonly="1"/>
                        </group>
                    </group>

                    <!-- Tabs for Description, Offers, and Other Info -->
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" context="{'default_property_id': active_id}"/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="bedrooms"/>
                                <field name="facades"/>
                                <field name="garden"/>
                                <field name="garden_orientation"/>
                                <field name="living_area"/>
                                <field name="garage"/>
                                <field name="garden_area"/>
                                <field name="total_area" readonly="1"/>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Estate Property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property List">
                <field name="name" string="Title"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="property_type_id" string="Property Type"/>
            </tree>
        </field>
    </record>

    <!-- Action for Estate Property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new property listing.
            </p>
        </field>
    </record>

</odoo>