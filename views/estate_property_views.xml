<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View for Estate Property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Property Form">
                <sheet>
                    <!-- Existing Groups -->
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="property_type_id"/>
                    </group>
                    <group>
                        <group>
                            <field name="postcode"/>
                            <field name="expected_price"/>
                            <field name="bedrooms"/>
                            <field name="facades"/>
                            <field name="garden"/>
                            <field name="garden_orientation"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="living_area"/>
                            <field name="garage"/>
                            <field name="garden_area"/>
                        </group>
                    </group>
                    <!-- New Tab for Buyer and Salesperson -->
                    <notebook>
                        <page string="Additional Info">
                            <group>
                                <field name="buyer_id"/>
                                <field name="salesperson_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View for Estate Property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Property List">
                <field name="name" string="Title"/>
                <field name="description"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="facades"/>
                <field name="garden"/>
                <field name="garden_orientation"/>
                <field name="garden_area"/>
                <field name="date_availability"/>
                <field name="selling_price"/>
                <field name="living_area"/>
                <field name="garage"/>
                <field name="property_type_id" string="Property Type"/>
            </tree>
        </field>
    </record>

    <!-- Action for Estate Property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Property</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to create a new property listing.
            </p>
        </field>
    </record>

</odoo>
